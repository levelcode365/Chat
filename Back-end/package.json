{
  "name": "chat-backend",
  "version": "1.0.0",
  "main": "src/core/servidor.js",
  "scripts": {
    "dev": "nodemon src/index.js",
    "start": "node src/index.js",
    "test": "jest",
    "test:quick": "node test/db/quick-test.js",
    "test:db": "mocha test/db/connection.test.js",
    "test:api": "mocha test/api/*.test.js",
    "test:all": "mocha \"test/**/*.test.js\"",
    "lint": "eslint .",
    "db:setup": "node scripts/setup-database.js",
    "db:migrate": "npx prisma migrate dev",
    "bot:test": "node test/bot.test.js",
    "health": "node test/health-check.js"
  },
  "jest": {
    "testMatch": [
      "**/test/**/*.test.js"
    ],
    "setupFiles": [
      "<rootDir>/jest.setup.js"
    ]
  },
  "dependencies": {
    "@prisma/client": "latest",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "express": "^4.18.3",
    "express-rate-limit": "^7.1.4",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "mssql": "^12.1.1",
    "pg": "^8.16.3",
    "sanitize-html": "^2.12.1",
    "socket.io": "^4.7.5",
    "xss-clean": "^0.1.1",
    "uuid": "^9.0.0",
    "body-parser": "^1.20.2",
    "ws": "^8.13.0",
    "axios": "^1.6.0",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.3",
    "prettier": "^3.2.5",
    "prisma": "latest",
    "supertest": "^6.3.4",
    "mocha": "^10.2.0",
    "chai": "^4.3.10"
  }
}